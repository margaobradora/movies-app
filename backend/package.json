
{
	"name": "movies-api",
	"version": "0.0.0",

	"private": true,
	"scripts": {
		"start": "node ./app.js",
		"install:client:deps": "cd ../frontend && npm i && cd ../backend",
		"build": "npm run install:client:deps && npm run build:client && npm run copy:files",
		"build:client": "cd ../frontend  && npm run build && cd ../backend",
		"copy:files": "rm -rf ./public && mkdir ./public && cp -Rv ../frontend/build/* ./public"
	},
	"dependencies": {
		"connect-mongo": "^4.6.0",
		"cookie-parser": "~1.4.4",
		"cors": "^2.8.5",
		"debug": "~2.6.9",
		"dotenv": "^14.3.2",
		"express": "~4.16.1",
		"express-session": "^1.17.2",
		"hbs": "~4.0.4",
		"http-errors": "~1.6.3",
		"mongodb": "^4.3.1",
		"mongoose": "^6.1.8",
		"morgan": "~1.9.1",
		"passport": "^0.5.2",
		"passport-local": "^1.0.0"
	},
	"devDependencies": {
		"eslint": "^8.8.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-plugin-import": "^2.25.4",
		"nodemon": "^2.0.15"
	}
}